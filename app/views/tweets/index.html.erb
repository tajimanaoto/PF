<div class="row bg-info">
<% @tweets.each do |tweet| %>
  <div class="col-md-4 border border-dark">
    <div class="card-index">
      <div class="card-body">
        <%= attachment_image_tag tweet, :image, fallback: "no_image_icon.jpg", class:"card-img-top" %>
        <% if user_signed_in? %>
        <!--link_toの中に遷移先の画面のturbolinkを切る記述を追加することでjavascriptをちゃんと動作するようにした-->
          <h4 class="card-title text-center"><%= link_to tweet.title, tweet_path(tweet.id), class:'hoge',data: {"turbolinks"=>false} %></h4>
        <% else %>
         <h4 class="card-title text-center"><%= tweet.title %></h4>
        <% end %>
       <p class="card-text text-center"><%= tweet.description %></p>
        <div class="md-4">
          <%= attachment_image_tag tweet.user, :profile_image, size:"60x60", fallback: "no_image_icon.jpg", class:"rounded-circle" %>
          <!--last_nameとfirst_nameを足して表示することでフルネームとして表示-->
          <% if user_signed_in? %>
           By <%= link_to tweet.user.last_name + tweet.user.first_name, user_path(tweet.user.id) %>
          <% else %>
           By <%= tweet.user.last_name + tweet.user.first_name %>
          <% end %>
        </div>
        <p>
          タグ: <%= tweet.tag_list %>
        </p>
        <div id="favorite-btn-<%= tweet.id %>">
          <%= render "favorites/favorite", tweet: tweet %>
        </div>
      </div>
    </div>
  </div>
<%end%>