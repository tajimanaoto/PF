<!--eachはdivに入れずに記載する-->
<% tweet.each do |tweet| %>
  <div class="col border bg-light mt-3">
    <div class="card-body">
      <%= attachment_image_tag tweet, :image, fallback: "no_image_icon.jpg", size:"700", class:"card-img" %>
      <% if tweet.user.id == current_user.id %>
        <h4 class="card-title text-center"><%= link_to tweet.title, tweet_path(tweet), class:'hoge',data: {"turbolinks"=>false} %></h4>
      <% else %>
        <h4 class="card-title text-center"><%=tweet.title %></h4>
      <% end %>
      <p class="card-text text-center"><%= tweet.description %></p>
      <% if tweet.user.id == current_user.id %>
      <div class="md-4">
        <%= link_to "編集", edit_tweet_path(tweet), class: "btn btn-primary" %>
        <%= link_to "削除", tweet_path(tweet), class:"btn btn-danger" ,method: :delete %>
      </div>
      <% end %>
    </div>
  </div>
<%end%>