<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 pt-10">
      <h2>投稿編集</h2>
      <%= form_with model:@tweet, local:true do |f| %>
      <div class="field">
        <label class="image">投稿画像</label>
        <%= f.attachment_field :image, class:"form-control-file" %>
      </div>
      <div class="field">
        <%= f.label "タイトル" %><br />
        <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "タイトル" %>
      </div>

      <div class="form-group">
       <%= f.label :tag_list, "タグ" %>　 ※カンマで区切ると複数のタグを登録できます<br>
       <%= f.text_field :tag_list, value: @tweet.tag_list.join(','), class: "form_control" %>
      </div>

      <div class="field">
        <%= f.label "紹介文" %><br />
        <%= f.text_area :description, autofocus: true, autocomplete: "description", placeholder: "紹介文" %>
      </div>
      <div class="pt-2">
        <%= f.submit class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>