<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%#= render 'info', user: @user %>
      <table class='table'>
        <tr><%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image_icon.jpg"  %></tr>
        <tr>
          <th>名前</th>
          <th><%= @user.last_name %> <%= @user.first_name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @user.description %></th>
        </tr>
      </table>
    </div>
  </div>
</div>